.card {
  width: 93%;
  height: 180rpx;
  background-color: #F7F7F7;
  margin: 10px auto;
  border-radius: 12px;
  box-shadow: 1px 1px 5px #CCCCCC;
  position: relative;
}
.card .left-line {
    position: absolute;
    width: 6px;
    height: 70rpx;
    left: -3px;
    top: 55rpx;
    background-color: salmon;
    border-radius: 10px;
}
.card .text-top {
    position: absolute;
    top: 30rpx;
    left: 30rpx;
    font-size: 20rpx;
    font-family: arial;
    letter-spacing: 3rpx;
}
.card .text-center {
    position: absolute;
    top: 75rpx;
    left: 30rpx;
    font-size: 18rpx;
    font-family: arial;
    letter-spacing: 3rpx;
    color: #555555;
}
.card .divider {
    position: absolute;
    width: 400rpx;
    height: 1rpx;
    border-top: 1px dashed #cccccc;
    top: 110rpx;
    left: 30rpx;
}
.card .text-bottom {
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    font-size: 20rpx;
    font-family: arial;
    letter-spacing: 3rpx;
    color: #555555;
}
.card .circle {
    position: absolute;
    top: 20rpx;
    right: 50rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: -webkit-linear-gradient(left, limegreen, lime, springgreen);
}
.card .circle .inner-circle {
      position: absolute;
      width: 72rpx;
      height: 72rpx;
      left: 14rpx;
      top: 14rpx;
      background-color: #F7F7F7;
      border-radius: 50%;
}
.card .circle .inner-circle .inner-center {
        position: absolute;
        width: 14rpx;
        height: 18rpx;
        left: 29rpx;
        top: 27rpx;
        border-radius: 30px;
        background: -webkit-linear-gradient(left, limegreen, lime, springgreen);
}
.card .circle .inner-circle .inner-center .linear {
          position: absolute;
          width: 6rpx;
          height: 10rpx;
          top: 4rpx;
          left: 4rpx;
          background-color: #F7F7F7;
          border-radius: 10px;
}
.card .history {
    position: absolute;
    right: 80rpx;
    bottom: 28rpx;
    font-size: 20rpx;
    font-family: arial;
    letter-spacing: 3rpx;
}
.card .icon-xiangyoujiantou {
    position: absolute;
    right: 50rpx;
    bottom: 28rpx;
    font-size: 20rpx;
    color: #777777;
}
